@model IEnumerable<OnlineFlightBookingSystem.Models.Flight_Booking>

@{
    ViewBag.Title = "Booking";
}

<h2>Booking</h2>

<p>
    @Html.ActionLink("Search Flight", "SearchFlight", "Flight")
</p>
<table class="table">
    <tr>
        <th>
            Booking ID
        </th>
        <th>
            Flight ID
        </th>
        <th>
            Origin
        </th>
        <th>
            Departure Date & Time
        </th>
        <th>
            Destination 
        </th>
        <th>
            Arrival Date & Time
        </th>
        <th>
            Class Type
        </th>
        <th>
            Number of Passengers
        </th>
        <th>
            Total Cost
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.flight_booking_id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.selected.flight_id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.selected.origin.country)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.selected.departure_datetime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.selected.arrive.country)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.selected.arrive_datetime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.selected.flight_class)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.passenger_number)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.total_cost)
        </td>
    </tr>
}

</table>
