@model IEnumerable<OnlineFlightBookingSystem.Models.Flight>
@{
    ViewBag.Title = "SearchFlight";
}

<h2>Search for your Flight</h2>
@using (Html.BeginForm("SearchFlight", "Flight", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <div class="form-group">
        @Html.Label("Origin", new { @class = "col-md-1 control-label" })
        <div class="col-md-3">
            @Html.TextBox("origin", null, new { @class = "form-control" })
        </div>
        @Html.Label("Destination", new { @class = "col-md-1 control-label" })
        <div class="col-md-3">
            @Html.TextBox("arrive", null, new { @class = "form-control" })
        </div>
        <div class="col-md-4">
            <input type="submit" class="btn btn-default" value="Search" />
        </div>
    </div>
}

<table class="table">
    <tr>
        <th>
            Departure Date & Time
        </th>
        <th>
            Arrive Date & Time
        </th>
        <th>
            Class Type
        </th>
        <th>
            Flight Cost
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.departure_datetime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.arrive_datetime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.flight_class)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.flight_cost)
            </td>
            <td>
                @Html.ActionLink("Book", "Booking", new { id = item.flight_id })
            </td>
        </tr>
    }

</table>
